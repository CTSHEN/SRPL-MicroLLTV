<?xml version="1.0" ?>

<robot name="srpl_mass_on_rails" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="base">
    <inertial>
      <mass value="100"/>
      <inertia ixx="16" ixy="0" ixz="0" iyy="16" iyz="0" izz="32"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.8" length="0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.8" length="0.01"/>
      </geometry>
    </collision>
  </link>

  <link name="rail1">
    <visual>
      <origin xyz="0 0.1 1.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 2.2"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0.1 1.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 2.2"/>
      </geometry>
    </collision>
  </link>

  <link name="rail2">
    <visual>
      <origin xyz="0 -0.1 1.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 2.2"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 -0.1 1.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 2.2"/>
      </geometry>
    </collision>
  </link>

  <link name="mass">
    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <inertia ixx="0.0667" ixy="0" ixz="0" iyy="0.06667" iyz="0" izz="0.06667"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.2"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.2"/>
      </geometry>
    </collision>
  </link>

  <joint name="rail1_base_joint" type="fixed">
    <parent link="base"/>
    <child link="rail1"/>
  </joint>

  <joint name="rail2_base_joint" type="fixed">
    <parent link="base"/>
    <child link="rail2"/>
  </joint>

  <joint name="mass_base_joint" type="prismatic">
    <parent link="base"/>
    <child link="mass"/>
    <dynamics damping="0.01" friction="0.01"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="2" effort="50" velocity="100"/>
  </joint>

  <gazebo>
    <plugin name="srpl_mass_balance" filename="libsrpl_mass_balance.so"/>
  </gazebo>
  <!-- Define any additional properties, parameters, or macros as needed -->
  <!-- Include the plugin -->
  <!--xacro:include filename="$(find your_package_name)/path/to/libsrpl_mass_balance.xacro" /-->
</robot>
